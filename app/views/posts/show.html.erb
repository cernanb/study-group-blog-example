<div>
  <h1>Title: <%= @post.title %></h1>
  <h4>Author: <%= @post.user.email %></h4>
  <p><%= @post.content %></p>
  <%= button_to "Delete Post", { controller: :posts, action: 'destroy', id: @post.id }, method: :delete %>
  <p>
    Comments:
  </p>
  <ul>
    <% @post.comments.each do |comment| %>

      <% if comment.content %>
        <li><%= comment.content %> </li>
      <% end %>


    <% end %>
  </ul>
  <%= form_for @comment do |f| %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.hidden_field(:post_id) %>
    <%= f.submit %>
  <% end %>
  <%= button_tag 'Previous', class: 'js-prev', data: {id: @post.id} %>
  <%= button_tag 'Next', class: 'js-next', data: {id: @post.id} %>
</div>
