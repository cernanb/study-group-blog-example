<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :content %><br>
  <%= f.text_area :content %>
</div>

<div class="field">

  <%= f.label 'Tags' %><br>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br>
  <%= f.label 'Create a new tag' %><br>
  <%= f.fields_for :tags do |tag|  %>
    <%= tag.text_field :name %>
  <% end %>
</div>

<%= f.submit "Create Post" %>
